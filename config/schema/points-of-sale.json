{
  "type": "Collection",
  "info": {
    "title": "Points of sale",
    "singularName": "point-of-sale",
    "pluralName": "points-of-sale",
    "description": "Point of sale (concrete address)"
  },
  "options": {
    "draftAndPublish": true,
    "localizations": ["en", "ro", "ru"]
  },
  "attributes": {
    "title": {
      "type": "Text"
    },
    "location": {
      "type": "Text",
      "required": true,
      "localized": true
    },
    "latitude": {
      "type": "Decimal",
      "required": true
    },
    "longitude": {
      "type": "Decimal",
      "required": true
    },
    "partner": {
      "relation": "BelongsToOne",
      "target": "partners"
    }
  }
}